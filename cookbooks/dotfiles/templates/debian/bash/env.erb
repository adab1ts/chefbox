# vim:ft=sh
# File: $DOTFILES_PATH/bash/env
# Contents: Values used by other scripts and applications


# PATH Variables
export ADMIN_PATH="${HOME}/<%= @admin_folder %>"
export DOTFILES_PATH="${HOME}/<%= @dotfiles_folder %>"
export BASH_DOTFILES_PATH="${DOTFILES_PATH}/bash"

export CDPATH=.:~:$ADMIN_PATH:$DOTFILES_PATH


# Misc Variables
export RELEASE=$( lsb_release -c | awk '{ print $2 }' )

export EDITOR="vim"
export XEDITOR="geany"

export DIFF_TOOL="vimdiff"
export XDIFF_TOOL="meld"


# Extra Variables
env_folder="$BASH_DOTFILES_PATH/env.d"

for f in $env_folder/*; do
        [[ -f "$f" ]] || continue
        . $f
done

unset env_folder

