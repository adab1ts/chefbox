  "profiles": {
    "fontmanager": {
      "description": "Font management application for the GNOME desktop",
      "website": "https://code.google.com/p/font-manager/",
      "platforms": {
        "linuxmint-17.0": { "source": "distro" },
        "ubuntu-14.04":   { "source": "distro" }
      },
      "sources": {
        "distro": {
          "package": "font-manager",
          "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>",
          "suggested": ["python-reportlab"]
        }
      }
    },
    "libreoffice": {
      "description": "Office productivity suite",
      "website": "http://www.libreoffice.org/",
      "platforms": {
        "linuxmint-17.0": { "source": "ppa", "default": true },
        "ubuntu-14.04":   { "source": "ppa", "default": true }
      },
      "sources": {
        "ppa": {
          "package": "libreoffice",
          "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>",
          "suggested": ["browser-plugin-libreoffice", "libreoffice-style-galaxy", "libreoffice-style-sifr"],
          "meta": {
            "repo_name": "libreoffice-libreoffice-4-2",
            "uri": "ppa:libreoffice/libreoffice-4-2"
          }
        }
      }
    },
