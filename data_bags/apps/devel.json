{
  "id": "devel",
  "apps": [
    "git",
    "juju",
    "shelr",
    "zsh"
  ],
  "profiles": {
    "git": {
      "description": "fast, scalable, distributed revision control system",
      "website": "http://git-scm.com/",
      "platforms": {
        "debian-7.5":   { "source": "distro-debian" },
        "linuxmint-13": { "source": "distro" },
        "ubuntu-12.04": { "source": "distro" },
        "ubuntu-14.04": { "source": "distro" }
      },
      "sources": {
        "distro": {
          "package": "git",
          "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>",
          "suggested": ["git-man", "giggle"]
        },
        "distro-debian": {
          "package": "git",
          "maintainer": "Gerrit Pape <pape@smarden.org>",
          "suggested": ["git-man", "giggle"]
        }
      }
    },
    "juju": {
      "description": "next generation service orchestration system",
      "website": "http://juju.ubuntu.com/",
      "platforms": {
        "linuxmint-13": { "source": "ppa" },
        "ubuntu-12.04": { "source": "ppa" },
        "ubuntu-14.04": { "source": "ppa" }
      },
      "sources": {
        "ppa": {
          "package": "juju-core",
          "maintainer": "Curtis Hovey <curtis.hovey@canonical.com>",
          "meta": {
            "repo_name": "juju-stable",
            "uri": "ppa:juju/stable"
          }
        }
      }
    },
    "shelr": {
      "description": "Utility for plain text screencasting",
      "website": "http://shelr.tv/",
      "platforms": {
        "debian-7.5":   { "source": "distro-debian" },
        "linuxmint-13": { "source": "ppa" },
        "ubuntu-12.04": { "source": "ppa" },
        "ubuntu-14.04": { "source": "distro" }
      },
      "sources": {
        "distro": {
          "package": "shelr",
          "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>"
        },
        "distro-debian": {
          "package": "shelr",
          "maintainer": "Antono Vasiljev <self@antono.info>"
        },
        "ppa": {
          "package": "shelr",
          "maintainer": "Antono Vasiljev <self@antono.info>",
          "meta": {
            "repo_name": "antono-shelr",
            "uri": "ppa:antono/shelr"
          }
        }
      }
    },
    "zsh": {
      "description": "shell with lots of features",
      "website": "http://zsh.sourceforge.net/",
      "platforms": {
        "debian-7.5":   { "source": "distro-debian" },
        "linuxmint-13": { "source": "distro" },
        "ubuntu-12.04": { "source": "distro" },
        "ubuntu-14.04": { "source": "distro" }
      },
      "sources": {
        "distro": {
          "package": "zsh",
          "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>"
        },
        "distro-debian": {
          "package": "zsh",
          "maintainer": "Debian Zsh Maintainers <pkg-zsh-devel@lists.alioth.debian.org>"
        }
      }
    }
  }
}
