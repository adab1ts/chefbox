      "platforms": {
        "debian-7.7":     { "source": "deb" },
        "linuxmint-17.0": { "source": "deb" },
        "ubuntu-14.04":   { "source": "deb" }
      },
      "sources": {
        "deb": {
          "package": "google-talkplugin",
          "maintainer": "Voice and Video Chat Linux Team <voice-and-video-linux-packager@google.com>",
          "meta": {
            "i686": {
              "file_name": "google-talkplugin_current_i386.deb",
              "uri": "https://ocserver/public.php?service=files&t=bb3ba86c93e98bed27cf29ea1615fada&download",
              "sha256": "5ea418a29a426c9df92c6876cac8b52fd9cbde9bf56541ed9079af48b16ad7d0"
