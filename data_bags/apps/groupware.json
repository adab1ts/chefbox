    "mumble": {
      "description": "Low latency VoIP client",
      "website": "http://mumble.sourceforge.net/",
      "platforms": {
        "linuxmint-13": { "source": "ppa" },
        "ubuntu-12.04": { "source": "ppa" },
        "ubuntu-14.04": { "source": "ppa" }
      },
      "sources": {
        "ppa": {
          "package": "mumble",
          "maintainer": "Mikkel Krautz <mikkel@krautz.dk>",
