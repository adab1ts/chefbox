{
  "id": "audio",
  "apps": [
    "lastfm",
    "nuvola",
    "rdio",
    "rhythmbox",
    "spotify",
    "tomahawk"
  ],
  "profiles": {
    "lastfm": {
      "description": "music player for Last.fm personalized radio",
      "website": "http://www.last.fm/",
      "platforms": {
        "ubuntu-12.04": { "source": "repo" }
      },
      "sources": {
        "repo": {
          "package": "lastfm-scrobbler",
          "maintainer": "Michael Coffey <michaelc@last.fm>",
          "meta": {
            "repo_name": "lastfm",
            "uri": "http://apt.last.fm/debian",
            "components": ["main"],
            "key": "http://apt.last.fm/last.fm.repo.gpg"
          }
        }
      }
    },
    "nuvola": {
      "description": "cloud music integration for Linux desktop",
      "website": "http://nuvolaplayer.fenryxo.cz/",
      "platforms": {
        "linuxmint-17.0": { "source": "ppa" },
        "ubuntu-12.04":   { "source": "ppa" },
        "ubuntu-14.04":   { "source": "ppa" }
      },
      "sources": {
        "ppa": {
          "package": "nuvolaplayer",
          "maintainer": "Jiří Janoušek <janousek.jiri@gmail.com>",
          "meta": {
            "repo_name": "nuvola-player-builders-stable",
            "uri": "ppa:nuvola-player-builders/stable"
          }
        }
      }
    },
    "rdio": {
      "description": "A simple native implementation for Rdio music services",
      "website": "http://www.rdio.com/",
      "platforms": {
        "ubuntu-12.04": { "source": "ppa" }
      },
      "sources": {
        "ppa": {
          "package": "rdio",
          "maintainer": "Scott Ringwelski <sgringwe@mtu.edu>",
          "meta": {
            "repo_name": "sgringwe-rdio",
            "uri": "ppa:sgringwe/rdio"
          }
        }
      }
    },
    "rhythmbox": {
      "description": "music player and organizer for GNOME",
      "website": "http://wiki.gnome.org/Apps/Rhythmbox",
      "platforms": {
        "ubuntu-12.04": { "source": "distro", "default": true }
      },
      "sources": {
        "distro": {
          "package": "rhythmbox",
          "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>"
        }
      }
    },
    "spotify": {
      "description": "Spotify desktop client",
      "website": "http://www.spotify.com/",
      "platforms": {
        "linuxmint-17.0": { "source": "repo" },
        "ubuntu-12.04":   { "source": "repo" },
        "ubuntu-14.04":   { "source": "repo" }
      },
      "sources": {
        "repo": {
          "package": "spotify-client",
          "maintainer": "Spotify <libspotify@spotify.com>",
          "meta": {
            "repo_name": "spotify",
            "uri": "http://repository.spotify.com",
            "distribution": "",
            "components": ["stable", "non-free"],
            "key": "94558F59",
            "keyserver": "keyserver.ubuntu.com"
          }
        }
      }
    },
    "tomahawk": {
      "description": "Social media player",
      "website": "http://www.tomahawk-player.org/",
      "platforms": {
        "linuxmint-17.0": { "source": "ppa" },
        "ubuntu-12.04":   { "source": "ppa" },
        "ubuntu-14.04":   { "source": "ppa" }
      },
      "sources": {
        "ppa": {
          "package": "tomahawk",
          "maintainer": "Paulo Dias <paulo.miguel.dias@gmail.com>",
          "meta": {
            "repo_name": "tomahawk-ppa",
            "uri": "ppa:tomahawk/ppa"
          }
        }
      }
    }
  }
}
