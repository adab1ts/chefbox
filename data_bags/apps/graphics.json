{
  "id": "graphics",
  "apps": [
    "pencil",
    "pinta",
    "shotwell"
  ],
  "profiles": {
    "pencil": {
      "description": "Animation/drawing software",
      "website": "http://www.pencil-animation.org/",
      "platforms": {
        "linuxmint-17.0": { "source": "distro" },
        "ubuntu-12.04":   { "source": "distro" },
        "ubuntu-14.04":   { "source": "distro" }
      },
      "sources": {
        "distro": {
          "package": "pencil",
          "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>"
        }
      }
    },
    "pinta": {
      "description": "Simple drawing/painting program",
      "website": "http://pinta-project.com/",
      "platforms": {
        "linuxmint-17.0": { "source": "ppa" },
        "ubuntu-12.04":   { "source": "ppa" },
        "ubuntu-14.04":   { "source": "ppa" }
      },
      "sources": {
        "ppa": {
          "package": "pinta",
          "maintainer": "Cameron White <cameronwhite91@gmail.com>",
          "meta": {
            "repo_name": "pinta-maintainers-pinta-stable",
            "uri": "ppa:pinta-maintainers/pinta-stable"
          }
        }
      }
    },
    "shotwell": {
      "description": "Digital photo organizer",
      "website": "http://www.yorba.org/projects/shotwell/",
      "platforms": {
        "linuxmint-17.0": { "source": "distro" },
        "ubuntu-12.04":   { "source": "ppa", "default": true },
        "ubuntu-14.04":   { "source": "distro", "default": true }
      },
      "sources": {
        "distro": {
          "package": "shotwell",
          "maintainer": "Ubuntu Desktop Team <ubuntu-desktop@lists.ubuntu.com>"
        },
        "ppa": {
          "package": "shotwell",
          "maintainer": "Lucas Beeler <>",
          "meta": {
            "repo_name": "yorba-ppa",
            "uri": "ppa:yorba/ppa"
          }
        }
      }
    }
  }
}
