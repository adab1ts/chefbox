      "website": "http://launchpad.net/furiusisomount",
      "source": {
        "type": "distro"
      }
    },
    "hardinfo": {
      "package": "hardinfo",
      "maintainer": "Ubuntu Developers <ubuntu-devel-discuss@lists.ubuntu.com>",
